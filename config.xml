<?xml version='1.0' encoding='utf-8'?>
<widget id="ie.natosoft.ipt" version="1.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Irish Public Transport</name>
    <description>
        An Irish Public Transport App
    </description>
    <author email="info@natosoft.co" href="https://natosoft.ie/">
        Thomas Behan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <icon src="res/icon/res/mipmap-xxxhdpi/icon.png" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-x-socialsharing" spec="5.4.3">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="24.1.1+" />
    </plugin>
    <plugin name="cordova-plugin-firebase-analytics" spec="1.0.1">
        <variable name="FIREBASE_CORE_VERSION" value="16.0.+" />
    </plugin>
    <plugin name="cordova-support-google-services" spec="1.2.1" />
    <engine name="android" spec="7.1.4" />
</widget>
